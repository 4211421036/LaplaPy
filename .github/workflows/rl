name: Draft GitHub Release

on:
  push:
    branches:
      - "**"
    tags:
      - 'v*.*.*'

# Give the Action permission to create releases
permissions:
  contents: write  # needed to create GitHub Releases

jobs:
  create_release:
    runs-on: ubuntu-latest

    steps:
      - name: Check out code
        uses: actions/checkout@v4

      - name: Extract version from tag
        id: get_version
        run: |
          # GITHUB_REF is e.g. "refs/tags/v0.1.0"
          VERSION=${GITHUB_REF#refs/tags/v}
          echo "VERSION=$VERSION" >> $GITHUB_OUTPUT

      - name: Draft GitHub Release
        uses: softprops/action-gh-release@v1
        with:
          # Use the full tag, e.g. "v0.1.0"
          tag_name: "${{ github.ref_name }}"
          # Release title
          name: "LaplaPy"
          # Simple body, you can expand this or pull from CHANGELOG.md
          body: |
            ## Changelog

            - Release LaplaPy v${{ steps.get_version.outputs.VERSION }}
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
